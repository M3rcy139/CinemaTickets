<Window x:Class="CinemaTicketsWpf.PaymentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Оплата билета" Height="400" Width="400">
    <Grid>
        <Button x:Name="SupportButton" Content="Обратиться в т/п" Width="120" Height="30" HorizontalAlignment="Right" VerticalAlignment="Top"
            Margin="10" Click="Support_Click" IsEnabled="True" Background="White" BorderBrush="Gray" Foreground="#FF6D6D6D"/>
        
        <StackPanel>
            <TextBlock Text="Введите данные для оплаты" FontSize="16" Margin="10" HorizontalAlignment="Left"/>

            <TextBox Name="NameTextBox" Text="Имя" Margin="10"/>
            <TextBox Name="SurnameTextBox" Text="Фамилия" Margin="10"/>
            <TextBox Name="EmailTextBox" Text="Email" Margin="10"/>
            <TextBox Name="AmountPaidTextBox" Text="Сумма" Margin="10"/>

            <ComboBox Name="PaymentTypeComboBox" Margin="10">
                <ComboBoxItem Content="Наличные" />
                <ComboBoxItem Content="Карта" />
            </ComboBox>

            <TextBlock Name="AmountTextBlock" Text="К оплате: 0₽" FontSize="14" Margin="10" HorizontalAlignment="Center"/>

            <Button Content="Оплатить" Click="PayButton_Click" HorizontalAlignment="Center" Margin="10" Width="100"/>
        </StackPanel>
    </Grid>
</Window>
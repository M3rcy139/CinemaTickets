<Window x:Class="CinemaTicketsWpf.CardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ввод данных карты" Height="400" Width="400">
    <Grid>
        <StackPanel>
            <TextBlock Text="Введите данные для оплаты" FontSize="16" Margin="10" HorizontalAlignment="Center"/>

            <TextBox Name="CardNumberTextBox" Text="Номер карты" Margin="10"/>
            <TextBox Name="CardDateTextBox" Text="До" Margin="10"/>
            <TextBox Name="CardCVCTextBox" Text="CVC2" Margin="10"/>

            <TextBlock Name="AmountCardTextBlock" Text="К оплате: 0₽" FontSize="14" Margin="10" HorizontalAlignment="Center"/>

            <Button Content="Подтвердить оплату" Click="PayButton_Click" HorizontalAlignment="Center" Margin="10" Width="120"/>
        </StackPanel>
    </Grid>
</Window>
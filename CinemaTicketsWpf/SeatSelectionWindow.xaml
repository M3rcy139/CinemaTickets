<Window x:Class="CinemaTicketsWpf.SeatSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Seat Selection" Height="700" Width="700">
    <Grid>
        <StackPanel>
            <TextBlock Text="Select a Seat" FontSize="16" Margin="10"/>

            <!-- Grid для отображения мест -->
            <Grid x:Name="SeatsGrid" Margin="10">
                <!-- Сетка с местами будет динамически заполняться в коде -->
            </Grid>

            <!-- Блок информации о выбранном месте -->
            <StackPanel Orientation="Horizontal" Margin="10">
                <TextBlock Text="Selected Seat Info:" FontWeight="Bold" Margin="0,0,10,0"/>
                <TextBlock x:Name="SeatInfoTextBlock"/>
            </StackPanel>

            <!-- Кнопка для возврата к выбору сеансов -->
            <Button Content="Back" Width="100" Click="BackButton_Click" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>

<Window x:Class="CinemaTicketsWpf.SupportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Обращение в тех.поддержку" Height="350" Width="400">
    <Grid>
        <StackPanel>
            <TextBlock Text="Отправить сообщение в тех.поддержку" FontSize="16" Margin="10" HorizontalAlignment="Center"/>

            <TextBox Name="MessageTextBox" Text="Сообщение" Margin="10" Height="150"/>

            <Button x:Name="SupportButton" Content="Отправить" Width="120" Height="30" HorizontalAlignment="Center"
                Margin="0 0 0 0" Click="SupportButton_Click" Background="White" BorderBrush="Black"/>
        </StackPanel>
    </Grid>
</Window>
<Window x:Class="CinemaTicketsWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Seance Selector" Height="400" Width="600">
    <Grid>
        <StackPanel>
            <TextBlock Text="Select a Hall:" Margin="10"/>

            <!-- ComboBox для выбора зала -->
            <ComboBox x:Name="HallsComboBox" 
                      DisplayMemberPath="Name" 
                      SelectedValuePath="Id"
                      SelectionChanged="HallsComboBox_SelectionChanged" 
                      Width="200" Margin="10"/>

            <TextBlock Text="Select a Seance:" Margin="10"/>

            <!-- ComboBox для выбора сеанса -->
            <ComboBox x:Name="SeancesComboBox"
                      DisplayMemberPath="FilmName"
                      SelectedValuePath="Id"
                      Width="200" Margin="10"/>

            <!-- Кнопка для перехода к выбору мест -->
            <Button x:Name="SelectSeatsButton" Content="Select Seats" Width="100" Height="30"
                    Margin="10" Click="SelectSeatsButton_Click" IsEnabled="False"/>
        </StackPanel>
    </Grid>
</Window>
<Window x:Class="CinemaTicketsWpf.ReceiptWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Чек" Height="400" Width="400">
    <Grid>
        <StackPanel>
            <TextBlock Text="Чек" FontSize="20" Margin="10" HorizontalAlignment="Center"/>

            <TextBlock Name="PaymentIdTextBlock" Text="ID Платежа:" FontSize="14" Margin="10"/>
            <TextBlock Name="SeatIdTextBlock" Text="ID Места:" FontSize="14" Margin="10"/>
            <TextBlock Name="PaymentTypeTextBlock" Text="Тип оплаты:" FontSize="14" Margin="10"/>
            <TextBlock Name="AmountTextBlock" Text="Сумма платежа:" FontSize="14" Margin="10"/>
            <TextBlock Name="ChangeTextBlock" Text="Сдача:" FontSize="14" Margin="10"/>
            <TextBlock Name="PaymentTimeTextBlock" Text="Время платежа:" FontSize="14" Margin="10"/>

            <Button Content="Получить билет" Click="GetTicketButton_Click" HorizontalAlignment="Center" Margin="10" Width="100"/>
            <Button Content="Закрыть" Click="CloseButton_Click" HorizontalAlignment="Center" Margin="10" Width="100"/>
        </StackPanel>
    </Grid>
</Window>